# Lista para almacenar las notas (puedes usar nÃºmeros enteros o decimales)
notas = []

# Inicializamos la variable que guardarÃ¡ la opciÃ³n elegida por el usuario
opcion = None

# --- DefiniciÃ³n de funciones --- #

def mostrar_menu():
    """Muestra las opciones del menÃº principal."""
    print("\n--- MENÃš PRINCIPAL ---")
    print("1. Agregar una nota")
    print("2. Mostrar todas las notas")
    print("3. Calcular promedio, mayor y menor")
    print("4. Terminar programa")


def agregar_nota(lista):
    """Permite al usuario agregar una nota a la lista."""
    try:
        nota = float(input("Ingrese la nota a agregar: "))
        lista.append(nota)
        print(f"âœ… Nota {nota} agregada correctamente.")
    except ValueError:
        print("ğŸ›‘ Â¡Entrada invÃ¡lida! Debe ingresar un nÃºmero para la nota.")


def mostrar_notas(lista):
    """Muestra todas las notas registradas."""
    if lista:
        print("\n--- LISTA DE NOTAS ---")
        for i, nota in enumerate(lista):
            print(f"Nota #{i+1}: {nota}")
    else:
        print("â„¹ï¸ AÃºn no hay notas registradas.")


def calcular_stats(lista):
    """Calcula y muestra el promedio, la nota mayor y la menor."""
    if lista:
        promedio = sum(lista) / len(lista)
        mayor = max(lista)
        menor = min(lista)

        print("\n--- RESULTADOS ---")
        print(f"ğŸ“Š Promedio de notas: {promedio:.2f}")
        print(f"â­ Nota mÃ¡s alta: {mayor}")
        print(f"â¬‡ï¸ Nota mÃ¡s baja: {menor}")
    else:
        print("â„¹ï¸ No hay notas registradas para calcular estadÃ­sticas.")


# --- Bucle principal del programa --- #
while True:
    mostrar_menu()
    
    try:
        opcion = int(input("Seleccione una opciÃ³n (1-4): "))
    except ValueError:
        print("ğŸ›‘ Â¡OpciÃ³n invÃ¡lida! Por favor, ingrese un nÃºmero del 1 al 4.")
        continue

    if opcion == 1:
        agregar_nota(notas)
    elif opcion == 2:
        mostrar_notas(notas)
    elif opcion == 3:
        calcular_stats(notas)
    elif opcion == 4:
        print("ğŸ‘‹ Â¡Programa finalizado! Gracias por usar el sistema.")
        break
    else:
        print("ğŸ›‘ OpciÃ³n fuera de rango. Debe ser un nÃºmero entre 1 y 4.")
